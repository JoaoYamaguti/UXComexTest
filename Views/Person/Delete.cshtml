@model UxcomexTest.Models.Person

@{
    ViewData["Title"] = "Delete";
}
<section class="deletePage">
    <header class="breadcrumbNav">
        <nav>
            <a asp-controller="Person" asp-action="Index">Pessoas</a>
            <i class="bi bi-chevron-compact-right text-secondary"></i>
            Excluir
        </nav>
        <hr />
    </header>

    <div class="content">
        <h4>Você tem certeza que quer deletar esse usuário?</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CPF)
            </dd>
        </dl>

        <form asp-action="Delete">
            <div class="btns">
                <a type="button" class="btnClose" asp-action="Index">Voltar</a>
                <input type="submit" value="Excluir" class="btnDelete" />
            </div>
        </form>
    </div>
</section>
